<!-- Everything inside the #post tags pulls data from the post -->
{{#post}}

    <article class="{{poast_class}}">
        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>
        <section class="post-meta">
            <p>
                by {{author}} on

                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">
                    {{date format="MMMM DD, YYYY"}}
                </time>
            </p>
        </section>
        <section class="post-content">
            {{content}}
        </section>
        <footer class="post-footer">
            <div class="author">
                {{#author}}
                    {{#if image}}
                        <figure class="author-image">
                            <a class="img" href="{{url}}">
                                <img src="{{image}}" alt="{{author}}" />
                                <span class="hidden">{{name}}'s Picture'</span>
                            </a>
                        </figure>
                    {{/if}}
                    <div class="author">
                        <a href="{{url}}">{{name}}</a>
                    </div>
                    {{#if twitter}}
                        <div class="author-twitter">
                            <a href="{{twitter_url}}">{{twitter}}</a>
                        </div>
                    {{/if}}
                {{/author}}
            </div>
            {{#if tags}}
                <div class="post-tags">
                    {{#foreach tags}}
                    <ul>
                        <li>
                            <a href="{{url}}" title="{{name}}" class="tag-{{id}}">
                                {{name}}
                            </a>
                        </li>
                    </ul>
                    {{/foreach}}
                </div>
            {{/if}}

        </footer>
    </article>

{{/post}}
